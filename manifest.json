{
    "manifest_version": 3,
    "name": "Wiki Sop Enhancer",
    "version": "1.0",
    "description": "Non-persistent checklist and notes for clinical wiki SOPs.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "http://*/radiowiki/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/radiowiki/*"
            ],
            "js": [
                "wiki-enhancer.js"
            ],
            "css": [
                "wiki-enhancer.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Wiki SOP Enhancer"
    }
}